{
  "languageserver": {
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "hdlChecker": {
            "command": "hdl_checker",
            "args": [
                "--lsp"
            ],
            "trace.server": "verbose",
            "filetypes": [
                "vhdl",
                "verilog",
                "systemverilog"
            ]
        }
